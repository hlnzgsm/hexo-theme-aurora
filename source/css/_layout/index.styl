* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

::selection {
  background: $selection-bg;
  color: $selection-color;
}

body
  font-family: $font-family-base;
  font-size: $font-size-base;
  font-weight: $font-weight-normal;
  color: $text-color;
  line-height: $line-height-base;
  user-select: none;
  scroll-behavior: smooth;
  text-shadow: 0 0 1px $bg-dark-dim;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;

ul, ol, li
  list-style-type: none;

h1, h2, h3, h4, h5, h6
  margin: 0;
  padding: 0;

img {
  display: block;
  margin: auto;
  max-width: 100%;
  height: auto;
  object-fit: cover;
}

a
button
  cursor($cursor-link-img);

a {
  color: inherit;
  text-decoration: none;
  outline: none;
  word-wrap: break-word;
}

button
  border: none;
  outline: none;

input,
textarea,
button
  appearance: none;
  -webkit-appearance: none;
  border: none;
  border-radius: 0;

html, body, .layout
  height: 100%;
  min-height: 100%;
  font-family: $font-family-base;
  +pc-layout()
    scrollBar();

.layout
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor($cursor-img);
  & > *
    flex-shrink: 0;
  header
    min-height: 200px;
  main
    flex: 1;
    margin: 0 auto;
    user-select: text;
    position: relative;
    +pc-layout()
      width: 876px;
    +sp-layout()
      width: 100%;
    .pjax-main-page
      min-height: 100%;
      display: flex;
      flex-direction: column;
  footer
    min-height: 80px;

.loading
  display: none;     
  .loading-image
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 80px;
.bg
  fillParent(fixed, $zIndex-bottom)
  background-color: #cfd0f8;
  &::after
    content: '';
    fillParent(absolute, $zIndex-1)
    background-color: rgba(255,255,255,0.65);
  .pc-static-bg
    fillParent(fixed, $zIndex-bottom)
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    +pc-layout()
      background-size: cover;
    +sp-layout()
      
      background-size: 0;
  .pc-dynamic-bg
    fillParent(fixed, $zIndex-bottom)
    +sp-layout()
      display: none;

.back-to-top
  position: fixed;
  top: -1200px;
  right: 0.25rem;
  width: 70px;
  height: 100%;
  z-index: 99;
  opacity: 1;
  transition: all 0.6s ease-out;
  background: $backToTop-bg no-repeat top;
  background-size: contain;
  animation: float 3s linear infinite;
  +sp-layout()
    display: none;

#aplayer
  transform: translateX(-100%);
  max-width: 310px !important;
  background-color: transparent;
  transition: all 0.3s ease-out;
  &:hover
    transform: translateX(0);
  .aplayer-miniswitcher
    width: 15px;
    background-color: $purple-dark;
    path
      fill: white;
  .aplayer-body
    padding-right: 15px;
    width: 310px;
    border-radius: 0 3px 3px 0;
    background-color: $bg-white-deep;
  .aplayer-list
    border: none;
    border-top-right-radius: 3px;
    background-color: $bg-white-deep;
    background-image: $aplayer-bg;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
    li
      border: none;
      &:hover,
      &.aplayer-list-light
        background-color: $bg-aplayer;
        span
          color: white;
      .aplayer-list-cur
        background-color: $purple-dark !important;

